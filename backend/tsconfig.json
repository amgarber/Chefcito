{
  "compilerOptions": {
    "target": "es2016",                                // Specifies the ECMAScript target version
    "type": "module",                              // Specifies the module system
    "esModuleInterop": true,                            // Enables interoperability between ES modules and CommonJS
    "forceConsistentCasingInFileNames": true,           // Ensures that file names are case-sensitive
    "strict": true,                                     // Enables strict type-checking options
    "skipLibCheck": true,                               // Skips type checking of declaration files

    "outDir": "./dist",                               // Directory for compiled JavaScript output
    "rootDir": "./src"                                // Root directory for TypeScript source files
  },
  "include": ["src"],                                  // Specifies the files to be included in compilation
  "exclude": ["node_modules", "dist"]                 // Excludes unnecessary directories from compilation
}
